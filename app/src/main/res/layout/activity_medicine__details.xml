<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.anaya.mfind.Medicine_Details">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:background="#9F000000">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Medicine Details"
            android:textColor="#fdc57d" />
    </RelativeLayout>

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_marginTop="71dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Medicine_Name"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/medbrand"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/medicine_name"
        android:layout_marginTop="14dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Medicine_Brand"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/medpref"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/medbrand"
        android:layout_marginTop="33dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="MedicinePreference"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/medpref"
        android:layout_marginTop="16dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Medicine_Description"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/ok"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/medprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#4eb175"
        android:text="Find Shops"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/medpref"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:background="@mipmap/ic_launcher"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/medprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description"
        android:layout_marginTop="17dp"
        android:paddingStart="10dp"
        android:text="Medicine_Price"
        android:textColor="#ffffff" android:paddingEnd="10dp"/>

</RelativeLayout>
