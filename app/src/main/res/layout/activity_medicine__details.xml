<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anaya.mfind.Medicine_Details">


   <TextView
        android:paddingStart="10dp"
        android:id="@+id/medicine_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/medbrand"
        android:layout_below="@+id/title"
        android:layout_marginTop="36dp"
        android:text="Medicine_Name" />

  <TextView
        android:paddingStart="10dp"
        android:id="@+id/medbrand"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title"
        android:layout_below="@+id/medicine_name"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="12dp"
        android:text="Medicine_Brand" />

  <TextView
        android:paddingStart="10dp"
        android:id="@+id/medpref"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/medbrand"
        android:layout_below="@+id/medbrand"
        android:layout_marginTop="23dp"
        android:text="MedicinePreference" />

  <TextView
        android:paddingStart="10dp"
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/medpref"
        android:layout_below="@+id/medpref"
        android:layout_marginTop="27dp"
        android:text="Medicine_Description" />

    <Button
        android:id="@+id/ok"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/medprice"
        android:layout_marginTop="41dp"
        android:text="Find Shops" />

  <TextView
        android:paddingStart="10dp"
        android:id="@+id/medprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/medbrand"
        android:layout_below="@+id/description"
        android:layout_marginTop="26dp"
        android:text="Medicine_Price" />

   <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Medicine Details" />

    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/description"
        android:layout_toEndOf="@+id/title"
        android:background="@mipmap/ic_launcher" />
</RelativeLayout>
