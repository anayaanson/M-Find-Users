<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f2f4">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"


        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="Arjun medicals"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shop_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shop_name"
        android:layout_alignBottom="@+id/shop_name"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/shop_name"
        android:paddingBottom="8dp"
        android:paddingStart="10dp"
        android:text="9:00AM - 9:00PM"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/shop_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shop_time"
        android:paddingBottom="8dp"
        android:paddingStart="10dp"
        android:text="96331258747"
        android:textSize="18sp" />

</RelativeLayout>